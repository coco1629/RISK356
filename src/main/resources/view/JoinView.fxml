<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.JoinController">
   <children>
      <Button fx:id="createButton" layoutX="40.0" layoutY="310.0" mnemonicParsing="false" onAction="#createSession" prefHeight="58.0" prefWidth="226.0" text="Create A Game">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="joinButton" layoutX="339.0" layoutY="310.0" mnemonicParsing="false" onAction="#joinSession" prefHeight="58.0" prefWidth="200.0" text="Join The Game">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <ListView fx:id="roomList" layoutX="339.0" layoutY="74.0" prefHeight="219.0" prefWidth="200.0" />
      <Label layoutX="339.0" layoutY="39.0" text="Available Rooms:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="40.0" layoutY="101.0" prefHeight="24.0" prefWidth="115.0" text="Room Size:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="roomSize" layoutX="40.0" layoutY="137.0" />
      <Label layoutX="40.0" layoutY="172.0" prefHeight="24.0" prefWidth="115.0" text="Room Name:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="roomName" layoutX="40.0" layoutY="207.0" />
      <Button fx:id="showButton" layoutX="492.0" layoutY="39.0" mnemonicParsing="false" onAction="#showRoom" text="show" />
   </children>
</AnchorPane>
